{
    "name": "PHP 8.3 & React Dev Environment for Buffet",
    "image": "mcr.microsoft.com/devcontainers/php:8.3",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        }
    },
    "forwardPorts": [
        80,
        3000
    ],
    "postCreateCommand": "sudo bash .devcontainer/start.sh",
    "portsAttributes": {
        "80": {
            "label": "Apache Server",
            "onAutoForward": "notify"
        },
        "3000": {
            "label": "React App",
            "onAutoForward": "notify"
        }
    },
    "remoteUser": "vscode"
}